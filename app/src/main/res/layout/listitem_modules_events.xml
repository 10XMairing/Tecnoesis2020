<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:strokeWidth="4dp"
        android:outlineAmbientShadowColor="#615E5E"
        android:elevation="30dp"
        app:strokeColor="#D2A9DA"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:src="@drawable/astronaut"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"/>


        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_centerHorizontal="true"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:id="@+id/frag_events_btn_eventname"
            android:elevation="30dp"
            android:shadowColor="#656166"
            android:textSize="11dp"
            android:textAlignment="center"
            app:cornerRadius="10dp"
            app:rippleColor="#CE8BDA"
            app:strokeColor="@color/md_pink_100"
            app:strokeWidth="1dp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="80dp"
            android:drawableLeft="@drawable/ic_star_black_24dp"
            android:drawablePadding="3dp"
            android:id="@+id/frag_events_tv_eventdescription"
            android:text="Quote on the event"
            android:textScaleX="1"
            android:textColor="#52245A"
            />


    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>