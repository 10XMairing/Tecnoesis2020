<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginRight="@dimen/margin_padding_size_medium"
    android:layout_marginLeft="@dimen/margin_padding_size_medium"
    android:layout_marginBottom="@dimen/margin_padding_size_medium"

    >
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_module_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            tools:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="170dp"
            android:background="@color/md_grey_50"
            android:layout_marginStart="@dimen/margin_padding_size_large"
            android:layout_marginEnd="@dimen/margin_padding_size_large"
            >
            <TextView
                android:id="@+id/tv_module_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem"
                android:layout_marginStart="@dimen/margin_padding_size_small"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/lora_bold"
                android:textSize="@dimen/text_size_xlarge"
                />
            <TextView

                android:id="@+id/tv_module_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_180"
                android:ellipsize="end"
                android:maxLines="5"
                android:fontFamily="@font/lora_regular"
                android:padding="@dimen/margin_padding_size_medium"
                android:textSize="@dimen/text_size_medium"


                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_events_module_item_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/module_btn_text"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/margin_padding_size_medium"
                android:layout_marginLeft="@dimen/margin_padding_size_medium"
                />
        </LinearLayout>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>