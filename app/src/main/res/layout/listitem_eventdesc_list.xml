<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/fragment_events_tv_eventheadline"
        android:textColor="#F8F4F6"
        android:layout_marginLeft="20dp"
        android:text="EVENT_NAME"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="DESCRIPTION"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#B6A834"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="30dp"
        />
    <View
        android:layout_width="2dp"
        android:layout_height="70dp"
        android:layout_marginTop="190dp"
        android:background="#61A9E2"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="5dp"
        android:fontFamily="@font/lora_italic"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/frag_events_tv_eventdes"
        android:textSize="14dp"
        android:textColor="#E9E3EB"
        android:text="This block "
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/frag_events_btn_eventimage"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="230dp"
        android:layout_gravity="right"
        android:elevation="30dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="RULES"
        android:textColor="#F5DB07"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="30dp"
        />
    <View
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:background="#61A9E2"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="5dp"
        android:layout_marginTop="320dp"
        android:textSize="14dp"
        android:fontFamily="@font/lora_italic"
        android:textColor="#E9E3EB"
        android:id="@+id/frag_events_tv_eventrules"
        android:layout_marginLeft="40dp"
        android:text="This block will contain rules of the event"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="PRIZE MONEY"
        android:textColor="#CEE019"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="30dp"
        />
    <View
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:background="#61A9E2"
        android:layout_marginTop="450dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="13dp"
        android:fontFamily="@font/lora_italic"
        android:textColor="#E9E3EB"
        android:id="@+id/frag_events_tv_eventprize"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="520dp"
        android:textColor="#B6A834"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="30dp"
        android:text="REGISTER"
        />
    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="REGISTER"
        android:textSize="10dp"
        android:id="@+id/frag_events_tv_register"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="40sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_play_circle_outline_black_24dp"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconSize="16dp"
        app:iconTint="@null"
        app:rippleColor="#D2C3EC"
        app:strokeColor="#D5BFC6"
        app:backgroundTint="#6198cb"
        app:strokeWidth="1dp">

    </TextView>

</RelativeLayout>