<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
    <ImageView
        android:id="@+id/iv_module_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        tools:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="170dp"
        android:background="@color/md_grey_50"
        android:layout_marginStart="@dimen/margin_padding_size_large"
        android:layout_marginEnd="@dimen/margin_padding_size_large"

        >
        <TextView
            android:id="@+id/tv_module_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            android:layout_marginStart="@dimen/margin_padding_size_small"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/lora_bold"
            android:textSize="@dimen/text_size_xlarge"
            />
        <TextView

            android:id="@+id/tv_module_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem_30"
            android:fontFamily="@font/lora_regular"
            android:padding="@dimen/margin_padding_size_medium"
            android:textSize="@dimen/text_size_medium"
            />


    </LinearLayout>
    </RelativeLayout>

</LinearLayout>