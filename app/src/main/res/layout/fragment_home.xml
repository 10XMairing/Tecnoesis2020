<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    android:tint="#6F0C0000"
    android:scrollbars="vertical"
    tools:context=".ui.main.home.HomeFragment"
    >


    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home_banner_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_banner_image"
            android:padding="@dimen/margin_padding_size_small"
            android:scaleType="fitXY"
            android:src="@drawable/tecnoesis" />

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/slider_home_events"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/iv_home_banner_image"
            android:elevation="20dp"
            app:sliderAnimationDuration="500"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderCircularHandlerEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="true"
            android:padding="3dp"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel1">



        <RelativeLayout
            android:id="@+id/relinside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_home_events"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_home_sponsors"
                android:layout_below="@id/recycler_home_events"
                android:text="OUR SPONSORS"
                android:layout_margin="15dp"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/md_white_1000"
                android:fontFamily="@font/lora_italic"
                android:textStyle="bold"/>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_sponsors_home_events"
                android:layout_below="@+id/tv_home_sponsors"

                android:paddingBottom="3dp"
                />




        </RelativeLayout>

    </ScrollView>
</RelativeLayout>





