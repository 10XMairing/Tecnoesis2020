<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:id="@+id/home_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"

        android:paddingTop="20dp"
        android:src="@drawable/digital" />

    <TextView
        android:id="@+id/Modules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="MODULES"
        android:textColor="@color/md_white_1000"
        android:textSize="25dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Modules"
        android:layout_alignParentLeft="true"
        android:textColor="@color/md_purple_100"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="3dp"
        android:textSize="12dp"
        android:text="Tecnoesis 2020 presents before you an amazing and alluring blende of events and modules. Dive straight into the world of techies and ignite the innovative genius within you. Particapate in workshops to discover exciting new topics."/>
</RelativeLayout>

